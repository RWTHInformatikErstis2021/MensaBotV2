<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="console" target="info">
            <PatternLayout pattern="[%-5p] [%d{DEFAULT}] [%c] %m%n%ex%n" />
        </Console>
        <File name="logfile" filename="all.log" immediateFlush="false" append="true">
            <PatternLayout pattern="[%-5p] [%d{DEFAULT}] [%c] %m%n%ex%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root>
            <AppenderRef ref="console" />
            <AppenderRef ref="logfile" />
        </Root>
    </Loggers>
</Configuration>
